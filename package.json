{
  "name": "language-purescript",
  "displayName": "PureScript Language Support",
  "description": "Syntax Highlighting for the PureScript programming language",
  "version": "0.0.1",
  "publisher": "nwolverson",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "purescript",
        "aliases": [
          "PureScript",
          "purescript"
        ],
        "extensions": [
          ".purs"
        ],
        "configuration": "./purescript.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "purescript",
        "scopeName": "source.purescript",
        "path": "./syntaxes/purescript.json"
      }
    ]
  },
  "dependencies": {
    "cson": "^3.0.2",
    "request": "^2.67.0"
  },
  "scripts": {
    "build": "node scripts/update-grammar.js"
  }
}
